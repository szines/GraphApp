<h1>Manage Sales</h1>
{{#link-to 'sales.create' class='btn btn-success'}}Create a new Sale record{{/link-to}}
<button {{action 'generateSampleData'}} class="btn btn-info">Generate Sample Data</button>
<button {{action 'deleteAll'}} class="btn btn-danger">Delete All</button>
<br/><br/>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Daily revenue ($)</th>
        <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each}}
      <tr>
          <td>{{id}}</td>
          <td>{{date}}</td>
          <td>{{amount}}</td>
          <td>
            {{#link-to 'sales.edit' this class='btn btn-info'}}Edit{{/link-to}}
            <button {{action 'deleteSale' this}} class="btn btn-danger">Delete</button>
          </td>
      </tr>
  {{/each}}
  </tbody>
</table>
